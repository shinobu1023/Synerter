
@{
    ViewBag.Title = "Create";
}

<div class="content-form-page">
    

    <form role="form" class="form-horizontal form-without-legend" action="" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label class="col-lg-2 control-label">產品名稱 <span class="require">*</span></label>
            <div class="col-lg-8">
                <input type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">賣場名稱 <span class="require">*</span></label>
            <div class="col-lg-8">
                <input type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">價格 <span class="require">*</span></label>
            <div class="col-lg-8">
                <input type="text" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 control-label">圖片上傳 <span class="require">*</span></label>
            <div class="col-lg-8">
                <input type="file" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-8 col-md-offset-2 padding-left-0 padding-top-20">

                <a href="/Product/Index" class="btn btn-primary" type="submit">新增</a>

            </div>
        </div>

    </form>
</div>