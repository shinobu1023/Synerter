
@{
    ViewBag.Title = "ShoppingCartList";
}

<div class="container px-3 my-5 clearfix">
    <!-- Shopping cart table -->
    <div class="card">
        <div class="card-header">
            <h2>Shopping Cart</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <!-- Set columns width -->
                            <th class="text-center py-3 px-4" style="min-width: 400px;">商品名稱</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">價格</th>
                            <th class="text-center py-3 px-4" style="width: 120px;">件數</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">商品總金額</th>
                            <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#" class="shop-tooltip float-none text-light" title="" data-original-title="Clear cart"><i class="ino ion-md-trash"></i></a></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="p-4">
                                <div class="media align-items-center">
                                    <img src="~/img/商品1.jpg" class="d-block ui-w-40 ui-bordered mr-4" alt="" width="300">
                                    <div class="media-body">
                                        <a href="/Product/Detail" class="d-block text-dark">筆電 12吋 高階 輕薄 商務筆電 HP 820G3 i5 8G/256G</a>
                                        
                                    </div>
                                </div>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$57.55</td>
                            <td class="align-middle p-4">
                                <a class="form-control text-center" href="#">-</a>
                            <input type="text" readonly class="form-control text-center" value="0">
                                <a class="form-control text-center" href="">+</a>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$115.1</td>
                            <td class="text-center align-middle px-0"><a href="#" class="shop-tooltip close float-none text-danger" title="" data-original-title="Remove">×</a></td>
                        </tr>

                        <tr>
                            <td class="p-4">
                                <div class="media align-items-center">
                                    <img src="~/img/商品2.jpg" class="d-block ui-w-40 ui-bordered mr-4" alt="" width="300">
                                    <div class="media-body">
                                        <a href="/Product/Detail2" class="d-block text-dark">筆電 14吋 商務筆電 Lenovo Thinkpad T470 i5-6300/8G/240G 固態硬碟</a>
                                        
                                    </div>
                                </div>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$1049.00</td>
                            <td class="align-middle p-4">
                                <a class="form-control text-center" href="#">-</a>
                                <input type="text" readonly class="form-control text-center" value="0">
                                <a class="form-control text-center" href="">+</a>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$1049.00</td>
                            <td class="text-center align-middle px-0"><a href="#" class="shop-tooltip close float-none text-danger" title="" data-original-title="Remove">×</a></td>
                        </tr>

                        <tr>
                            <td class="p-4">
                                <div class="media align-items-center">
                                    <img src="~/img/商品3.jpg" class="d-block ui-w-40 ui-bordered mr-4" alt="" width="300">
                                    <div class="media-body">
                                        <a href="/Product/Detail3" class="d-block text-dark">ASUS ROG 電競筆電 GA503QR-0022E5900HS 潮魂黑</a>
                                        
                                    </div>
                                </div>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$20.55</td>
                            <td class="align-middle p-4">
                                <a class="form-control text-center" href="#">-</a>
                                <input type="text" readonly class="form-control text-center" value="0">
                                <a class="form-control text-center" href="">+</a>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">$20.55</td>
                            <td class="text-center align-middle px-0"><a href="#" class="shop-tooltip close float-none text-danger" title="" data-original-title="Remove">×</a></td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- / Shopping cart table -->

            <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
                <div class="mt-4">
                    <label class="text-muted font-weight-normal">優惠碼</label>
                    <input type="text" placeholder="請輸入優惠碼" class="form-control">
                </div>
                <div class="d-flex">
                    <div class="text-right mt-4 mr-5">
                        <label class="text-muted font-weight-normal m-0">折扣</label>
                        <div class="text-large"><strong>$20</strong></div>
                    </div>
                    <div class="text-right mt-4">
                        <label class="text-muted font-weight-normal m-0">訂單總金額</label>
                        <div class="text-large"><strong>$1164.65</strong></div>
                    </div>
                </div>
            </div>

            <div class="float-right">
                <a href="/Product/Index">
                    <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">繼續購物</button>
                </a>
                
                <button type="button" class="btn btn-lg btn-primary mt-2">確定結帳</button>
            </div>

        </div>
    </div>
</div>